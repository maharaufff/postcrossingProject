{
  "manifest_version": 2,
  "name": "Postcrossing Tab Sorter",
  "version": "1.0",
  "description": "Sort Postcrossing postcard tabs by their number (e.g., CL-34269 < CN-4087990 < US-11797804).",
  "permissions": ["tabs", "notifications"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "postcard-16.png",
      "32": "postcard-32.png"
    },
    "default_title": "Sort Postcrossing Tabs"
  }
}
